@model IEnumerable<RocketLaunchDay2.Models.simpleLaunch>
    
@{
    ViewBag.Title = "Map";
}


<!DOCTYPE html>
<html>
<head>
    <title>Working with Openlayers</title>
    <link rel="stylesheet" href="https://openlayers.org/en/v4.6.5/css/ol.css" type="text/css">
    <!-- Openlayers CSS file-->

    <style type="text/css">
        #map {
            width: 100%;
            height: 120%;
        }
    </style>
    <!--Basic styling for map div,
    if height is not defined the div will show up with 0 px height  -->
</head>
<body>
    <div id="map">
        <!-- Your map will be shown inside this div-->
    </div>
    <p hidden id="dataContainer" >@Url.Action("RocketPage", "Home")</p>
</body>
<script src="https://openlayers.org/en/v4.6.5/build/ol.js" type="text/javascript"></script>
<!-- Openlayesr JS fIle -->
<script src="~/Scripts/map.js"></script>
<!-- Our map file -->
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

    
    @foreach (var item in Model)
    {
        <script>
            var lat = @Html.DisplayFor(modelItem => item.latitude); console.log(lat);
            var lon = @Html.DisplayFor(modelItem => item.longitude); console.log(lon);
            var name = "@Html.DisplayFor(modelItem => item.name)"; console.log(name);
            var id = @Html.DisplayFor(modelItem => item.id);
            createNewMarker(lon, lat, "../Photos/rocket.png", id);
         
        </script>
    }

    


</html>